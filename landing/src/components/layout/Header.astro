---
import { Button, Link } from '@nexora/ui';
import Brand from '../Brand.astro';
---

<header class="bg-background/80 border-border/50 fixed top-0 right-0 left-0 z-50 border-b backdrop-blur-xl">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-6">
    <Brand />
    <nav class="text-muted-foreground hidden items-center gap-8 text-sm md:flex">
      <Link href="#features">Características</Link>
      <Link href="#how-it-works">Cómo funciona</Link>
      <Link href="#pricing" disabled>Precios</Link>
    </nav>

    <Button href="/signin" variant="ghost" size="sm" disabled>Ingresar</Button>
  </div>
</header>
