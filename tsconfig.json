{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@components/*": ["./components/*"],
      "@layouts/*": ["./layouts/*"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"]
    }
  }
}
